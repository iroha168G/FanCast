<form action="<%= root_path %>" method="get">
  <%= hidden_field_tag :status, params[:status] %>
  <div class="p-2 flex justify-center items-center">
    <div class="relative w-[400px]">
      <input
        type="text"
        name="keyword"
        value="<%= params[:keyword] %>"
        class="w-full h-10 bg-white border rounded pl-2 pr-2"
        placeholder="<%= placeholder || "検索" %>"
      >

      <% if params[:keyword].present? %>
        <%= link_to "×",
            root_path(status: params[:status].presence || "live"),
            class: "absolute right-2 top-1/2 -translate-y-1/2
                   text-gray-400 hover:text-gray-700 text-lg",
            aria: { label: "検索をクリア" } %>
      <% end %>
    </div>

    <input
      type="submit"
      value="検索"
      class="w-18 h-10 bg-blue-500 text-white py-2 mx-2 rounded"
    >
  </div>
</form>
