<header class="bg-gray-800 text-white p-2 flex items-center">
  <!-- ハンバーガーボタン -->
  <button id="menu-button" class="p-2 focus:outline-none">
    <!-- 開閉アイコン（≡） -->
    <svg id="menu-icon" xmlns="http://www.w3.org/2000/svg" class="h-9 w-9" fill="none"
         viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round"
            d="M4 6h16M4 12h16M4 18h16" />
    </svg>

    <!-- 閉じるアイコン（×） -->
    <svg id="close-icon" xmlns="http://www.w3.org/2000/svg" class="h-9 w-9 hidden" fill="none"
         viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round"
            d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>

  <div class="text-2xl font-bold p-2">FanCast</div>
</header>

<!-- メニュー（初期は非表示） -->
<nav id="menu" class="hidden bg-gray-700 text-white p-4">
  <ul class="space-y-2">
    <% if current_user %>
      <li><%= link_to "ホーム", root_path, class: "block hover:text-gray-300" %></li>
      <li><%= link_to "チャンネルを探す", new_channel_path, class: "block hover:text-gray-300" %></li>
      <li><%= "登録チャンネル" %></li>
      <li><%= link_to "ログアウト", logout_path, data: { turbo_method: :delete }, class: "block hover:text-gray-300" %></li>
      <hr class="my-2 border-gray-400">
      <li><%= "タイムゾーン" %></li>
      <li><%= "言語" %></li>
    <% else %>
      <li><%= link_to "ログイン", login_path, class: "block hover:text-gray-300" %></li>
    <% end %>
  </ul>
</nav>
