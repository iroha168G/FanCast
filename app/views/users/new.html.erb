<div class="min-h-screen flex items-center justify-center px-4">
  <div class="w-full max-w-md bg-white rounded-lg shadow-md p-6">
    <h2 class="text-2xl font-bold text-center mb-6">
      新規登録
    </h2>

    <% if @user.errors.any? %>
      <div class="mb-4 px-4 py-3 rounded bg-red-100 text-red-800 text-sm">
        <p class="font-semibold mb-1">入力に問題があります:</p>
        <ul class="list-disc list-inside space-y-1">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user, local: true, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :name, "ユーザー名",
          class: "block text-sm font-medium mb-1" %>
        <%= f.text_field :name,
          class: "w-full h-10 px-3 border rounded focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div>
        <%= f.label :email, "メールアドレス",
          class: "block text-sm font-medium mb-1" %>
        <%= f.email_field :email,
          class: "w-full h-10 px-3 border rounded focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div>
        <%= f.label :password, "パスワード",
          class: "block text-sm font-medium mb-1" %>
        <%= f.password_field :password,
          class: "w-full h-10 px-3 border rounded focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "パスワード（確認用）",
          class: "block text-sm font-medium mb-1" %>
        <%= f.password_field :password_confirmation,
          class: "w-full h-10 px-3 border rounded focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <%= f.submit "登録する",
        class: "w-full h-11 bg-green-600 text-white font-semibold rounded hover:bg-green-700 transition" %>
    <% end %>

    <div class="mt-6 text-center text-sm">
      <%= link_to "すでにアカウントをお持ちの方はこちら", login_path,
        class: "text-blue-600 hover:underline" %>
    </div>
  </div>
</div>