<div class="auth-container">
  <div class="auth-card">
    <h2 class="auth-title">新規登録</h2>

    <%= form_with url: users_path, local: true, class: "auth-form" do |f| %>
      <div class="form-group">
        <%= f.label :name, "ユーザー名", class: "form-label" %>
        <%= f.text_field :name, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "パスワード（確認用）", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-input" %>
      </div>

      <%= f.submit "登録する", class: "btn-success" %>
    <% end %>

    <div class="auth-footer">
      <%= link_to "すでにアカウントをお持ちの方はこちら", new_login_path, class: "text-blue-600 visited:text-purple-600 hover:underline" %>
    </div>
  </div>
</div>
