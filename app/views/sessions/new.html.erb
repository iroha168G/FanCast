<div class="auth-container">
  <div class="auth-card">
    <h2 class="auth-title">ログイン</h2>

    <% if flash[:alert] %>
      <div class="bg-red-100 text-red-800 mb-4 px-4 py-2 rounded shadow-md">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: login_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, class: "form-input" %>
      </div>

      <%= f.submit "ログイン", class: "btn-primary" %>
    <% end %>

    <div class="auth-footer">
      <%= link_to "新規登録はこちら", signup_path, class: "text-blue-600 visited:text-purple-600 hover:underline" %>
    </div>
    <div class="auth-footer">
      <%= link_to "パスワードをお忘れの方", new_password_reset_path, class: "text-blue-600 visited:text-purple-600 hover:underline" %>
    </div>
  </div>
</div>
